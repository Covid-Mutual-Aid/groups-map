{
  "name": "covid-groups",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "preinstall": "cd client && yarn install && cd ../lambdas; yarn install",
    "db:setup": "cd lambdas && sls dynamodb install",
    "db:remove": "cd lambdas && sls dynamodb remove",
    "db:start": "cd lambdas && sls dynamodb start",
    "start:client": "cd client; yarn start",
    "start:lambda": "cd lambdas; env OFFLINE=true sls offline",
    "start": "run-p start:client start:lambda db:start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  }
}
